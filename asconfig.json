{
  "options": {
    "bindings": false,
    "disable": ["bulk-memory"],
    "use": ["abort=assembly/index/myAbort"]
  },

  "targets": {
    "debug": {
      "outFile": "build/debug.wasm",
      "optimize": false,
      "optimizeLevel": 0,
      "shrinkLevel": 0,
      "converge": false,
      "debug": true
    },
    "release": {
      "outFile": "build/release.wasm",
      "optimize": true,
      "optimizeLevel": 3,
      "shrinkLevel": 2,
      "converge": true,
      "runtime": "minimal"
    }
  }
}